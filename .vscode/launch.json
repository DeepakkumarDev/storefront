{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program":"${workspaceFolder}/manage.py",
            "args": [
                "runserver" ,
                "9000"
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}




